<div class="user-info">
  <div class="avatar-circle"><span class="initials"><%= @user.first_name.chars.first%><%= @user.last_name.chars.first %></span></div>
  <div class="user-info-text">
    <h5><%= @user.first_name %> <%= @user.last_name %></h5>
    <p>Member since: <%= @user.created_at.strftime('%b %d, %Y') %></p>
    <p> Open Reports: <%= @user.reports.length %></p>
    <p> Solved Reports: <%= @user.reports.length %></p>
    <p><i class="far fa-edit edit-profile"></i> <%= link_to "Edit your profile", edit_user_registration_path, class:"edit-profile" %></p>
  </div>
</div>

<br>
<br>
<h3>Your reports</h3>


<div class="cards">

  <% @user.reports.each do |report|  %>
      <div class="report-card">
        <%= link_to report_path(report) do %>
          <div class="img-votes">
            <% if report.photo.attached? %>
              <%= cl_image_tag report.photo.key  %>
            <% else %>
              <img src="https://www.rd.com/wp-content/uploads/2019/04/mai-khao-beach-phuket-thailand-june-222018-dirty-beach-along-the-shoreline.jpg">
            <% end %>
            <div class="vote-count">
              <span class="line-height"><%= report.total_votes %></span>
                <p>VOTES</p>
            </div>
          </div>
        <% end %>
        <div class="report-card-info">
          <div class="report-text">
            <div>
              <%= link_to report_path(report) do %>
                <h2><%= report.title%></h2>
                <p><i class="fas fa-map-marker-alt mr-1"></i><%= report.location.split(",").first%></p>
                <!-- <p><i class="far fa-calendar-alt mr-1"></i><%= ((DateTime.current.to_date - report.created_at.to_date) / 3600).round %> hours ago</p> -->
                <p><i class="far fa-calendar-alt mr-1"></i><%= ((DateTime.current.to_date - report.created_at.to_date)).to_i %> days ago</p>
              <% end %>
              <%= link_to report.category.name, reports_path(request.params.merge(category_id: report.category.id)), class: "pill-category" %>
            </div>
          </div>
          <div class="upvotes-buttons">
            <%= link_to upvote_report_path(report) do %>
              <i class="fas fa-thumbs-up"></i>
            <%end%>
            <%= link_to downvote_report_path(report) do %>
              <i class="fas fa-thumbs-down"></i>
            <%end%>
          </div>
        </div>
      </div>
  <%end%>
</div>




